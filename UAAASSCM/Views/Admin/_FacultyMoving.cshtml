@model List<UAAASSCM.Controllers.FacultyMovingModel>

@{
}
@using (Ajax.BeginForm("FacultyMoving", "Admin", new AjaxOptions()))
{
    <table width="100%">
        <thead style="background: #C1D4E6; font-weight: bold; text-align: left; border: 1px solid #C0C0C0; padding: 5px">
            <tr>
                <th width="5%">S.No.</th>
                <th width="5%">Select</th>
                <th width="60%">Current Department</th>
            </tr>
        </thead>
        <tbody style="background: #FCF1D1; border: 1px solid #C0C0C0; padding: 5px">
            @if (Model.Count() != 0)
            {
                for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td width="5%" style="text-align: center">
                            @(i + 1)
                            @Html.HiddenFor(model => Model[i].NewSCMId)
                            @Html.HiddenFor(model => Model[i].RegistrationNumber)
                            @Html.HiddenFor(model => Model[i].DesignationId)
                            @Html.HiddenFor(model => Model[i].NewDeptId)
                            @Html.HiddenFor(model => Model[i].OldSCMId)
                            @Html.HiddenFor(model => Model[i].AddFacultyId)
                        </td>
                        <td width="5%" style="text-align: center">@Html.CheckBoxFor(model => Model[i].SelectDeptId)</td>
                        <td width="60%">@Html.DisplayFor(model => Model[i].NewDeptName)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div style="text-align: center">
        <p>
            <input id="btnsubmit" type="submit" value="Submit" class="create_button" />
        </p>
    </div>
}

<style>
    table thead tr th {
        padding-left: 10px;
    }
</style>