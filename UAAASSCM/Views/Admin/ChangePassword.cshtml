@model UAAASSCM.Controllers.ChangepasswordModel
@{
    ViewBag.Title = "ChangePassword";
    if (User.Identity.Name == "admin")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
    }
}

<h2>Change Password</h2>

@if (TempData["Error"] != null)
{
    <div class="error">
        <p><strong>Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Validations.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jspdf.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jspdf.plugin.from_html.js")" type="text/javascript"></script>



<div>
    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
    {
        <table width="50%">
            <tr>
                <td class="col1" width="10%">
                    @Html.LabelFor(model => model.OldPassword) <span class="mandatory">*</span>
                </td>
                <td class="col2" width="90%">
                    @Html.PasswordFor(model => model.OldPassword,new{maxlength="15"})
                    @Html.ValidationMessageFor(model => model.OldPassword)
                </td>
            </tr>
            <tr>
                <td class="col1" width="10%">
                    @Html.LabelFor(model => model.NewPassword) <span class="mandatory">*</span>
                </td>
                <td class="col2" width="90%">
                    @Html.PasswordFor(model => model.NewPassword, new { maxlength = "15" })
                    @Html.ValidationMessageFor(model => model.NewPassword)
                </td>
            </tr>
            <tr>
                <td class="col1" width="10%">
                    @Html.LabelFor(model => model.ConfirmPassword)
                </td>
                <td class="col2" width="90%">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { maxlength = "15" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" id="btnsubmit" value="submit"/>
                </td>
            </tr>
        </table>
        
        
          
    }
</div>
<style>
    .col1 {
        width: 8%;
    }
    .col2 {
        width: 32%;
    }
</style>